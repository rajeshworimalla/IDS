# Example env file for /etc/ids/backend.env
# Copy this to /etc/ids/backend.env and adjust.

# App
PORT=5001
JWT_SECRET=change-me
MONGODB_URI=mongodb://127.0.0.1:27017/ids
REDIS_URL=redis://127.0.0.1:6379
NODE_ENV=production

# Auto-block policy defaults (can also be changed via UI)
RL_WINDOW_SECONDS=60
RL_THRESHOLD=100
BAN_MINUTES=60
USE_FIREWALL=true
USE_NGINX_DENY=true

# Nginx integration
NGINX_DENY_FILE=/etc/nginx/ids.deny
NGINX_RELOAD_CMD="sudo /usr/sbin/nginx -s reload"

# Optional external aggregator
AGGREGATOR_URL=
AGGREGATOR_TOKEN=
